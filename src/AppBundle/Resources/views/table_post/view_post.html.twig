{% extends 'base.html.twig' %}
{% block body %}

	<div class="container mt-5">
		<div class="row">
			<div class="post">
				<h4 class="title">{{ post.title|upper }}</h4>
				<p class="date_post"><b>Publicado :</b>{{ post.create_at|date('F j, Y, g:i a') }}</p>
				<p class="body">{{ post.body }}</p>

			</div>
		</div>
	</div>
	
{% endblock %}